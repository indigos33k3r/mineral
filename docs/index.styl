body
  font-family 'Open Sans', sans-serif
  font-size 1em
  padding 20%

h1, h2, h3, h4
  font-family 'Source Sans Pro', sans-serif

h1
  font-size 2.5em

h2
  margin-top 100px

a, a:visited, .red
  color #ff5252

a
  text-decoration none
  padding-bottom 2px
  border-bottom 1px
  outline none

p
  line-height 23px

pre, code
  font-family 'Source Code Pro', monospace
  font-size 1em
  overflow auto

pre
  position relative
  padding 10px
  background-color #fafafa
  border-bottom 1px solid #d5d5d5
  &.warn
    border-bottom 1px solid red
